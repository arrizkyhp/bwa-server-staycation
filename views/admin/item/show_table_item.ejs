<div class="tab-pane fade show active" id="show-item" role="tabpanel" aria-labelledby="home-tab">
    <div class="card shadow mb-4 mt-4">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Country</th>
                            <th>City</th>
                            <th>Popular</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% item.map((e, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= e.title %></td>
                            <td>$<%= e.price %></td>
                            <td><%= e.country %></td>
                            <td><%= e.city %></td>
                            <td>
                                <% if( e.isPopular === false ) { %>
                                <span class="badge badge-danger">No</span>
                                <% } else { %>
                                <span class="badge badge-success">Yes</span>

                                <% } %>
                            </td>
                            <td>
                                <form action="/admin/item/<%= e.id %>/delete?_method=DELETE" method="POST">
                                    <a href="/admin/item/show-image/<%= e.id %>"
                                        class="btn btn-info btn-circle btn-sm ">
                                        <i class=" fas fa-image"> </i>
                                    </a>
                                    <a href="/admin/item/<%= e.id %>" class="btn btn-warning btn-circle btn-sm ">
                                        <i class=" fas fa-edit"> </i>
                                    </a>
                                    </a>

                                    <button type="submit" class="btn btn-danger btn-circle btn-sm">
                                        <i class=" fas fa-trash"> </i>
                                    </button>

                                    <a href="/admin/item/show-detail-item/<%= e.id %>"
                                        class="btn btn-success btn-circle btn-sm ">
                                        <i class=" fas fa-plus"> </i>
                                </form>
                            </td>
                        </tr>
                        <% } ) %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>No</th>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Country</th>
                            <th>City</th>
                            <th>Popular</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>

                </table>
            </div>
        </div>
    </div>

</div>